@using ACManageR.ViewModels;
@using ACManageR.Entities;
@model ACManageR.ViewModels.UserVM;
@{
    ViewData["Title"] = "DeleteUser";
}

<h1>Delete user:</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <div class="row">
        <div class="col-md-4">
            <form action="../DeleteUser/@Model.Id" method="post">
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <label class="control-label">@Model.Username</label>
                </div>
                <div class="form-group">
                    <label asp-for="RoleId" class="control-label"></label>
                    <label class="control-label">@(((RolesEnum)Model.RoleId).ToString())</label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
